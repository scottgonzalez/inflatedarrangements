<% content_for :title, @photo.description %>

<div>
  <img class='product-image' src='<%= @photo.image.url %>' alt=''>

  <% if @photo.products.any? %>
    <p>Products featured in this photo:</p>
    <ul>
      <% @photo.products.each do |product| %>
        <li><%= link_to product.name, product %></li>
      <% end %>
    </ul>
  <% end %>
</div>
